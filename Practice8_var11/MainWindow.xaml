<Window x:Class="Practice8_var11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice8_var11"
        mc:Ignorable="d"
        Title="Family" Height="400" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="27"/>
            <RowDefinition Height="43"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="27*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="28*"/>
            <RowDefinition Height="164*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="BatyaName" HorizontalAlignment="Center" Text="Имя бати" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" Height="22"/>
        <Button x:Name="BatyaTalkBtn" Content="Заставить батю говорить (1 пиво)" HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Row="3" VerticalAlignment="Top" Height="22" Width="269" Grid.ColumnSpan="2" Click="BatyaTalkBtn_Click"/>
        <Button x:Name="KorzinaTalkBtn" Content="Заставить сына говорить (2 конфеты)" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="22" Width="269" Grid.ColumnSpan="2"/>
        <Button x:Name="PivoBuyBtn" Content="Купить 1 пиво (50 рублей)" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="22" Width="269" Grid.ColumnSpan="2"/>
        <Button x:Name="KulekBuyBtn" Content="Купить кулёк конфет (100 рублей)" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Top" Height="22" Width="269" Grid.ColumnSpan="2" Margin="0,31,0,0" Grid.RowSpan="2"/>
        <Button x:Name="WorkBtn" Content="Работать" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Top" Height="22" Width="269" Grid.ColumnSpan="2" Margin="0,28,0,0" Grid.RowSpan="2"/>
        <Button x:Name="MakeMoreMoney" Content="Подкупить начальника (10 бутылок и 2 кулька)" HorizontalAlignment="Center" Margin="0,27,0,0" Grid.Row="7" VerticalAlignment="Top" Height="22" Width="269" Grid.ColumnSpan="2"/>
        <TextBox x:Name="KorzinaName" HorizontalAlignment="Left" Text="Имя сына" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" Height="22" Margin="7,0,0,0" Grid.Column="1"/>
        <TextBox x:Name="KorzinaMiddleName" HorizontalAlignment="Left" Text="Отчество сына" TextWrapping="Wrap" VerticalAlignment="Center" Width="122" Height="22" Margin="7,0,0,0" Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="Stats" Content="Стата" HorizontalAlignment="Left" Margin="10,54,0,0" Grid.Row="7" VerticalAlignment="Top"/>

    </Grid>
</Window>
