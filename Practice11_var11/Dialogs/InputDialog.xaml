<Window x:Class="Practice11_var11.Dialogs.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practice11_var11.Dialogs"
        mc:Ignorable="d"
        MaxHeight="200"
        MaxWidth="400"
        MinWidth="250"
        MinHeight="200"
        Title="Input" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10,10,10,10">
            <TextBlock 
            x:Name="TextLabel"
               Text="Enter text"
               VerticalAlignment="Center"/>
            <Separator Opacity="0" Height="5"/>
            <TextBox 
                x:Name="InputBox"
                 TextWrapping="Wrap"
                 Text="Some value"
                Height="75"/>
            <Separator Opacity="0" Height="15"/>
            <Button Content="OK" Width="84" Click="Button_Click" Height="20"/>

        </StackPanel>
    </Grid>
</Window>
